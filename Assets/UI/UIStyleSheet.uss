.bottom-section {
    height: 30%;
    flex-direction: row;
    justify-content: space-between;
    border-left-color: rgb(11, 255, 0);
    border-right-color: rgb(11, 255, 0);
    border-top-color: rgb(11, 255, 0);
    border-bottom-color: rgb(11, 255, 0);
    max-width: 90%;
    align-items: center;
    width: 90%;
}

.reloading-label {
    -unity-font-definition: url('project://database/Assets/UI/Fonts/Micro%20SDF.asset?fileID=11400000&guid=1147eb3c6893f6f44ba141cb452996d5&type=2#Micro SDF');
    height: 10%;
    -unity-text-align: upper-right;
    color: rgb(255, 255, 255);
    letter-spacing: 3px;
    width: 118px;
    margin-left: 0;
    margin-right: 0;
    margin-top: 2px;
    margin-bottom: 0;
    white-space: nowrap;
    padding-left: 0;
    padding-right: 0;
    padding-top: 0;
    padding-bottom: 0;
    visibility: hidden;
}

.top-bar {
    flex-direction: row-reverse;
    justify-content: space-between;
    border-left-color: rgb(11, 255, 0);
    border-right-color: rgb(11, 255, 0);
    border-top-color: rgb(11, 255, 0);
    border-bottom-color: rgb(11, 255, 0);
    max-width: 90%;
    align-items: center;
    width: 90%;
}
