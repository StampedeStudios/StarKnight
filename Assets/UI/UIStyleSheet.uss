.health-bar {
    flex-direction: column; 
    align-items: stretch; 
    translate: 0 0; 
    border-color: #0F3DA8;
    border-radius: 2px;
    rotate: -90deg;
}

.health-bar .unity-progress-bar__container {
    border-width: 2px;
    border-color: #0F3DA8;
    border-radius: 2px;
}

.health-bar .unity-progress-bar__progress {
    background-color: #151A91;
    border-radius: 0px 2px 2px 0px;
}
